# EditorConfig ajuda a manter estilos de codificação consistentes para múltiplos editores e IDEs
# Mais informações: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.py]
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2 